  "description": "Performance-first React component library with tree-shakable subpath imports",
  "author": "Binary Garden",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thebinarygarden/flora.git",
    "directory": "packages/flora"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
