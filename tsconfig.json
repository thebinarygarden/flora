{
  "compilerOptions": {
    "baseUrl": "./", // Base directory for resolution
    "paths": {
      "@components/*": [
        "src/components/*"
      ]
    },
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "ES6",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
