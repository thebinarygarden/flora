{
  "compilerOptions": {
    "baseUrl": "./", // Base directory for resolution
    "paths": {
      "@components/*": ["src/components/*"],
    },
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "ES6",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
